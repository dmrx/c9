curl "https://developer.salesforce.com/media/salesforce-cli/sfdx-linux-amd64.tar.xz" -o "sfdx-linux-amd64.tar.xz"
tar xf sfdx-linux-amd64.tar.xz
sudo ./sfdx/install -i /usr/local/sfdx -b /usr/local/bin/sfdx 

